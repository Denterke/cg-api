    <script type="text/javascript" src="{{ asset('bundles/fefu-app/js/schedule_app.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/fefu-app/js/xls.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/fefu-app/js/filesaver.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/fefu-app/js/jszip.js') }}"></script>
