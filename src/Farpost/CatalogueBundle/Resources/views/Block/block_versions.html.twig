{% extends 'SonataBlockBundle:Block:block_base.html.twig' %}

{% block block %}
    {%  trans_default_domain "FarpostCatalogueBundle" %}
    <table class="table table-bordered table-striped sonata-ba-list">
        <thead>
        <tr>
            <th colspan="3">{%  trans %}label.versions{%  endtrans %}</th>
        </tr>
        </thead>

        <tbody>
        {% for version in versions %}
            <tr>
                <td>
                    <div class="btn-group" align="center">
                        {{ version.type }}
                    </div>
                </td>
                <td>
                    <div class="btn-group" align="center">
                        {{ version.version }}
                    </div>
                </td>
                <td>
                    <a href="#"><i class="glyphicon glyphicon-upload"></i></a>
                </td>
            </tr>
        {%  endfor %}
        </tbody>
    </table>
    <div>
        {% if processingCnt > 0 %}
            <a class="btn btn-danger" disabled>Генерация уже идет ({{ processingCnt }})</a>
            <a href="{{  path('farpost_export_catalogue') }}" class="btn btn-default">Сгенерировать справочник</a>
        {% else %}
            <a href="{{  path('farpost_export_catalogue') }}" class="btn btn-success">Начать генерацию справочника</a>
        {% endif %}
    </div>
{% endblock %}