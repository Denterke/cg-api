{% block body %}
	<div class="fileUpload pure-button pure-button-primary">
    	<span>Загрузить файл с расписанием</span>
    	<input id="fileInput" type="file" class="upload" onchange="processFiles(this.files)"/>
	</div>
	<div id="content" class="centerWrap">
		<div id="metaDiv">
			<div id="metaInfoTable" class="tableWrap">
			</div>
		</div>
		<div id="scheduleDiv">
			<div id="scheduleTable"  class="tableWrap">
			</div>
			<div id="scheduleBtns" class="invisible">
				<input type="button" id="saveBtn" value="Сохранить" class="button button-success pure-button"></input>
				<input type="button" id="clearBtn" value="Очистить" class="button button-error pure-button"></input>
			</div>
		</div>
		</div>

	<div id="fileOutput">
	</div>
{% endblock %}